                app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
                app:layout_constraintBottom_toBottomOf="@id/nsv"
                app:layout_constraintTop_toTopOf="@id/nsv" />


        </androidx.core.widget.NestedScrollView>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <LinearLayout
        android:id="@+id/frame_fab"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/fab_bg"
        android:orientation="vertical"
        android:visibility="visible"

        app:layout_constraintBottom_toBottomOf="@id/fab"
        app:layout_constraintLeft_toLeftOf="@id/fab"
        app:layout_constraintRight_toRightOf="@id/fab"


        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"

            android:src="@drawable/call"

            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"

            android:src="@drawable/about_us"


            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"

            android:src="@drawable/magazine"


            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="60dp"
            android:src="@drawable/store"

            />


    </LinearLayout>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:elevation="0dp"
        android:src="@drawable/line_fab"
        android:visibility="visible"
        app:backgroundTint="@color/app_color"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toTopOf="@id/bottom_nav"
        app:layout_constraintRight_toRightOf="@+id/bottom_nav" />

    <ImageView
        android:layout_width="5dp"
        android:layout_height="50dp"
        android:background="@drawable/bg_blue_rect_header"
        app:layout_constraintBottom_toTopOf="@+id/bottom_nav"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="parent" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/BottomNavigationView2"
        app:backgroundTint="@color/app_color"
        app:itemIconTint="@color/bottom_nav_color_state"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/main_menu"

        tools:layout_editor_absoluteX="0dp" />

</androidx.constraintlayout.widget.ConstraintLayout>





